{
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "printWidth": 160,
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": false,
                "bracketSpacing": true,
                "explicitTypes": "preserve",
                "trailingComma": "none"
            }
        },
        {
            "files": "*.ts",
            "options": {
                "printWidth": 160,
                "tabWidth": 2,
                "useTabs": false,
                "singleQuote": true,
                "bracketSpacing": true,
                "trailingComma": "none",
                "semi": true
            }
        }
    ]
}